{
  "name": "@dinja/core",
  "version": "0.3.1",
  "description": "Fast MDX renderer with component support - JavaScript bindings",
  "main": "wrapper.js",
  "types": "index.d.ts",
  "keywords": [
    "mdx",
    "markdown",
    "jsx",
    "react",
    "renderer",
    "napi",
    "rust",
    "performance"
  ],
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/hlop3z/dinja.git",
    "directory": "js-bindings"
  },
  "bugs": {
    "url": "https://github.com/hlop3z/dinja/issues"
  },
  "homepage": "https://github.com/hlop3z/dinja/tree/main/js-bindings#readme",
  "files": [
    "index.js",
    "wrapper.js",
    "index.d.ts",
    "*.node"
  ],
  "napi": {
    "binaryName": "dinja-js-bindings",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-apple-darwin"
    ]
  },
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "test": "node --test test/*.test.js",
    "universal": "napi universal",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1"
  }
}
